<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xcy.mapper.AdminMapper" >

  <!-- 通过email检查是否存在-->
  <select id="validEmail" resultType="int" parameterType="string">
        select count(1) from admin where email = #{email}
  </select>

  <!--  通过id删除整行数据  -->
  <delete id="deleteByPrimaryKey" parameterType="int" >
    delete from admin
    where id = #{id}
  </delete>

<!--  通过admin进行添加操作-->
  <insert id="insert" parameterType="com.xcy.pojo.Admin" >
    insert into admin (id, phone, password, 
      verificationcode, email)
    values (#{id}, #{phone}, #{password},
      #{verificationcode}, #{email)
  </insert>

<!--  -->
  <insert id="insertSelective" parameterType="com.xcy.pojo.Admin" >
    insert into admin
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="phone != null" >
        phone,
      </if>
      <if test="password != null" >
        password,
      </if>
      <if test="verificationcode != null" >
        verificationcode,
      </if>
      <if test="email != null" >
        email,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id},
      </if>
      <if test="phone != null" >
        #{phone},
      </if>
      <if test="password != null" >
        #{password},
      </if>
      <if test="verificationcode != null" >
        #{verificationcode},
      </if>
      <if test="email != null" >
        #{email},
      </if>
    </trim>
  </insert>

<!--  修改通过id -->
  <update id="updateByPrimaryKey" parameterType="com.xcy.pojo.Admin" >
    update admin
    set phone = #{phone,jdbcType=VARCHAR},
      password = #{password,jdbcType=VARCHAR},
      verificationcode = #{verificationcode,jdbcType=VARCHAR},
      email = #{email,jdbcType=VARCHAR}
    where id = #{id}
  </update>
</mapper>